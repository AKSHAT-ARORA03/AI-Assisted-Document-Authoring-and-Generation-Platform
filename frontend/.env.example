# React App Configuration
REACT_APP_NAME=DocuMind - AI Document Platform
REACT_APP_VERSION=1.0.0

# API Configuration
# Update this URL to your backend server address
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
REACT_APP_API_TIMEOUT=30000

# Authentication Settings
REACT_APP_TOKEN_STORAGE_KEY=docuMindAuthToken
REACT_APP_SESSION_TIMEOUT_MINUTES=30

# UI Configuration
REACT_APP_THEME=light
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PROJECTS_PER_PAGE=20

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_SHOW_BETA_FEATURES=false

# File Upload Limits
REACT_APP_MAX_FILE_SIZE_MB=10
REACT_APP_ALLOWED_FILE_TYPES=.docx,.pptx

# AI Content Generation Settings
REACT_APP_MAX_SECTIONS_PER_DOCUMENT=20
REACT_APP_MAX_SLIDES_PER_PRESENTATION=50
REACT_APP_AI_GENERATION_TIMEOUT=60000

# Environment
NODE_ENV=production
GENERATE_SOURCEMAP=false

# Build Configuration
BUILD_PATH=build
PUBLIC_URL=/

# Development Settings
REACT_APP_DEV_TOOLS=false
FAST_REFRESH=false