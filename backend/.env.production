# Production Environment Configuration
# MongoDB Configuration (MongoDB Atlas recommended for production)
MONGODB_URL=mongodb+srv://username:password@your-cluster.mongodb.net/document_platform_prod
MONGODB_DATABASE_NAME=document_platform_prod

# JWT Authentication Settings (CRITICAL: Generate strong keys for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE-THIS-TO-A-SUPER-STRONG-RANDOM-KEY-IN-PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=1

# Google Gemini AI Configuration
GEMINI_API_KEY=your-production-gemini-api-key
GEMINI_MODEL=gemini-pro

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=False
ENVIRONMENT=production

# CORS Settings (Update with your production domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=./logs/app.log

# Rate Limiting (Stricter for production)
RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_MINUTE=5