# MongoDB Configuration
# For local development: mongodb://localhost:27017/document_platform
# For MongoDB Atlas (cloud): mongodb+srv://username:password@cluster.mongodb.net/document_platform
MONGODB_URL=mongodb://localhost:27017/document_platform
MONGODB_DATABASE_NAME=document_platform

# JWT Authentication Settings
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-here-make-it-long-and-random-at-least-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=True
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
AI_RATE_LIMIT_PER_MINUTE=10